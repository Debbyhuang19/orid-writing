                          <div className="p-4 space-y-3 flex-1">
                            <div className="bg-indigo-50 p-3 rounded-lg">
                              <p className="text-xs font-bold text-indigo-700 mb-1">AI ç¸½è©•</p>
                              <p className="text-xs text-indigo-900 line-clamp-3">{sub.feedback.overall}</p>
                            </div>
                            <div className="grid grid-cols-4 gap-1 text-center">
                              {(['O', 'R', 'I', 'D'] as OridType[]).map(t => (
                                <div key={t} className="bg-slate-100 rounded p-1">
                                  <div className="text-[10px] font-bold text-slate-500">{t}</div>
                                  <div className={`text-xs font-bold ${sub.feedback[t].score >= 8 ? 'text-green-600' : 'text-slate-700'}`}>{sub.feedback[t].score}</div>
                                </div>
                              ))}
                            </div>
                          </div>
                          <div className="p-3 border-t border-slate-100 flex justify-between items-center bg-slate-50">
                             <div className="flex gap-2">
                               {/* Quick Exports on Card */}
                               <button 
                                 onClick={(e) => { e.stopPropagation(); handleExportExcel([sub], `${sub.studentName}-${sub.articleTitle}`); }} 
                                 className="p-1.5 text-green-600 hover:bg-green-100 rounded transition-colors"
                                 title="ä¸‹è¼‰ Excel"
                               >
                                 <FileSpreadsheet size={16} />
                               </button>
                               <button 
                                 onClick={(e) => { e.stopPropagation(); handleExportWord([sub], `${sub.studentName}-${sub.articleTitle}`); }} 
                                 className="p-1.5 text-blue-600 hover:bg-blue-100 rounded transition-colors"
                                 title="ä¸‹è¼‰ Word"
                               >
                                 <FileText size={16} />
                               </button>
                               {/* Image Hint */}
                               <div className="flex items-center gap-1 text-xs text-slate-400 ml-2 border-l pl-2 border-slate-200">
                                  <ImageIcon size={14} />
                                  <span>é»æ“ŠæŸ¥çœ‹åœ–ç‰‡</span>
                               </div>
                             </div>

                            <button onClick={(e) => { e.stopPropagation(); handleDeleteSubmission(sub.id); }} className="text-slate-400 hover:text-red-600 hover:bg-red-50 p-1.5 rounded-full transition-colors" title="åˆªé™¤">
                              <Trash2 size={16} />
                            </button>
                          </div>
                        </div>
                      ))
                    )}
                  </div>
                </>
              )
            ) : (
              // Article Management
              <div className="space-y-6">
                <div className="bg-white p-6 rounded-xl border border-slate-200 shadow-sm">
                  <h3 className="font-bold mb-4 flex items-center gap-2">
                    {isAddingArticle ? (editingArticleId ? 'ç·¨è¼¯æ–‡ç« ' : 'æ–°å¢æ–‡ç« ') : 'æ–‡ç« åˆ—è¡¨'}
                    {!isAddingArticle && <button onClick={() => { setIsAddingArticle(true); setEditingArticleId(null); setNewArticleTitle(''); setNewArticleContent(''); }} className="ml-auto bg-indigo-600 text-white text-xs px-3 py-1.5 rounded-full flex items-center gap-1 hover:bg-indigo-700"><Plus size={14} /> æ–°å¢</button>}
                  </h3>
                  {isAddingArticle ? (
                    <div className="space-y-4 animate-in fade-in">
                      <input className="w-full p-2 border rounded" placeholder="æ–‡ç« æ¨™é¡Œ" value={newArticleTitle} onChange={e => setNewArticleTitle(e.target.value)}/>
                      <textarea className="w-full p-2 border rounded h-40" placeholder="æ–‡ç« å…§å®¹..." value={newArticleContent} onChange={e => setNewArticleContent(e.target.value)}/>
                      <div className="flex gap-2 justify-end">
                        <button onClick={handleCancelEditArticle} className="px-4 py-2 text-slate-500 text-sm">å–æ¶ˆ</button>
                        <button onClick={handleSaveArticle} className="px-4 py-2 bg-indigo-600 text-white rounded text-sm font-medium">{editingArticleId ? 'ç¢ºèªæ›´æ–°' : 'ç¢ºèªç™¼å¸ƒ'}</button>
                      </div>
                    </div>
                  ) : (
                    <div className="space-y-3">
                      {articles.map(article => (
                        <div key={article.id} className="flex justify-between items-center p-3 hover:bg-slate-50 rounded-lg border border-transparent hover:border-slate-100 group">
                          <div className="flex-1 min-w-0 pr-4">
                            <h4 className="font-medium text-slate-800 truncate">{article.title}</h4>
                            <p className="text-xs text-slate-400 truncate">{article.content.substring(0, 50)}...</p>
                          </div>
                          <div className="flex items-center">
                              <button onClick={() => handleEditArticleClick(article)} className="text-slate-400 hover:text-indigo-600 p-2 transition-colors" title="ç·¨è¼¯">
                                <Pencil size={16} />
                              </button>
                              <button onClick={() => handleDeleteArticle(article.id)} className="text-slate-400 hover:text-red-500 opacity-0 group-hover:opacity-100 transition-opacity p-2" title="åˆªé™¤">
                                <Trash2 size={16} />
                              </button>
                          </div>
                        </div>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            )}
          </div>
        )}

        {/* === STUDENT VIEW === */}
        {role === 'student' && (
          <div className="grid grid-cols-1 lg:grid-cols-12 gap-6 h-full">
            <div className="lg:col-span-3 flex flex-col gap-4">
              <div className="bg-white rounded-xl border border-slate-200 p-2 shadow-sm">
                 <button onClick={() => { setStudentTab('write'); setViewingSubmissionId(null); }} className={`w-full text-left px-4 py-3 rounded-lg flex items-center gap-3 transition-colors mb-1 ${studentTab === 'write' ? 'bg-indigo-50 text-indigo-700 font-bold' : 'text-slate-600 hover:bg-slate-50'}`}><Plus size={18} /> æ–°å¢åæ€</button>
                 <button onClick={() => setStudentTab('history')} className={`w-full text-left px-4 py-3 rounded-lg flex items-center gap-3 transition-colors ${studentTab === 'history' ? 'bg-indigo-50 text-indigo-700 font-bold' : 'text-slate-600 hover:bg-slate-50'}`}><History size={18} /> æ­·å²ç´€éŒ„</button>
              </div>
              {studentTab === 'history' && (
                <div className="bg-white rounded-xl border border-slate-200 shadow-sm flex-1 overflow-hidden flex flex-col">
                  <div className="p-3 border-b border-slate-100 font-bold text-sm text-slate-500">æˆ‘çš„æäº¤ç´€éŒ„</div>
                  <div className="overflow-y-auto flex-1 p-2 space-y-2 max-h-[600px]">
                    {mySubmissions.length === 0 ? <p className="text-center text-xs text-slate-400 py-4">ç„¡ç´€éŒ„</p> : mySubmissions.map(sub => (
                      <button key={sub.id} onClick={() => setViewingSubmissionId(sub.id)} className={`w-full text-left p-3 rounded-lg border text-sm transition-all ${viewingSubmissionId === sub.id ? 'bg-indigo-50 border-indigo-200 shadow-sm' : 'bg-white border-slate-100 hover:border-indigo-100 hover:bg-slate-50'}`}>
                        <div className={`font-medium mb-1 ${viewingSubmissionId === sub.id ? 'text-indigo-700' : 'text-slate-800'}`}>{sub.articleTitle}</div>
                        <div className="flex justify-between items-center"><span className="text-xs text-slate-400">{sub.createdAt?.toDate ? sub.createdAt.toDate().toLocaleDateString() : 'Saving...'}</span><span className="text-xs bg-slate-100 text-slate-600 px-1.5 py-0.5 rounded">{sub.feedback.overall.substring(0, 4)}...</span></div>
                      </button>
                    ))}
                  </div>
                </div>
              )}
            </div>
            <div className="lg:col-span-9 space-y-6">
              {studentTab === 'history' ? (
                <div className="h-full">
                  {!viewingSubmission ? (
                    <div className="bg-white rounded-2xl shadow-sm border border-slate-200 p-8 text-center text-slate-500 h-[400px] flex flex-col items-center justify-center"><History className="w-12 h-12 mx-auto mb-4 text-indigo-200" /><p>è«‹å¾å·¦å´åˆ—è¡¨é¸æ“‡ä¸€ä»½ç´€éŒ„ä¾†æŸ¥çœ‹æˆ–ä¸‹è¼‰</p></div>
                  ) : (
                    <SubmissionDetailView submission={viewingSubmission} onClose={() => {}} isTeacher={false} />
                  )}
                </div>
              ) : (
                <>
                  <section className="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
                    <div className="bg-slate-50 px-6 py-4 border-b border-slate-200"><label className="text-xs font-bold text-slate-500 uppercase mb-1 block">é¸æ“‡é–±è®€ææ–™</label><select value={selectedArticleId} onChange={(e) => setSelectedArticleId(e.target.value)} className="w-full p-2 border rounded-md text-sm font-medium focus:ring-2 focus:ring-indigo-500 outline-none">{articles.length === 0 && <option value="">è¼‰å…¥ä¸­æˆ–ç„¡æ–‡ç« ...</option>}{articles.map(a => <option key={a.id} value={a.id}>{a.title}</option>)}</select></div>
                    <div className="p-6 max-h-[300px] overflow-y-auto border-b border-slate-100"><div className="prose prose-slate max-w-none text-slate-600 text-sm leading-relaxed whitespace-pre-wrap">{currentArticleObj ? currentArticleObj.content : 'è«‹é¸æ“‡ä¸€ç¯‡æ–‡ç« '}</div></div>
                  </section>
                  <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <div className="bg-white rounded-2xl shadow-sm border border-slate-200 flex flex-col">
                       <div className="flex border-b border-slate-100 overflow-x-auto">{(Object.keys(oridGuides) as OridType[]).map((type) => (<button key={type} onClick={() => setActiveOridTab(type)} className={`flex-1 py-3 px-2 text-sm font-medium border-b-2 transition-colors flex justify-center items-center gap-1 min-w-[60px] ${activeOridTab === type ? 'border-indigo-600 text-indigo-600 bg-indigo-50/50' : 'border-transparent text-slate-500 hover:text-slate-700'}`}><span className="font-bold">{type}</span></button>))}</div>
                      <div className="p-5 flex-1 flex flex-col">
                        <div className={`p-3 rounded-lg flex gap-3 mb-4 ${oridGuides[activeOridTab].color} bg-opacity-50`}><div className="mt-0.5">{oridGuides[activeOridTab].icon}</div><div><div className="font-bold text-sm">{oridGuides[activeOridTab].title}</div><div className="text-xs opacity-90">{oridGuides[activeOridTab].question}</div></div></div>
                        <textarea value={inputs[activeOridTab]} onChange={(e) => setInputs(prev => ({...prev, [activeOridTab]: e.target.value}))} className="flex-1 w-full p-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-indigo-500 focus:outline-none resize-none text-slate-700 min-h-[200px]" placeholder={`è«‹è¼¸å…¥æ‚¨çš„ ${activeOridTab} å›ç­” (è‡³å°‘ ${MIN_CHAR_COUNT} å­—)...`}/>
                        <div className="flex justify-between items-center mt-2 px-1"><span className={`text-xs font-medium ${inputs[activeOridTab].length >= MIN_CHAR_COUNT ? 'text-green-600' : 'text-red-500'}`}>ç›®å‰å­—æ•¸ï¼š{inputs[activeOridTab].length} / {MIN_CHAR_COUNT}</span>{inputs[activeOridTab].length < MIN_CHAR_COUNT && <span className="text-xs text-red-400">å­—æ•¸ä¸è¶³ï¼Œç„¡æ³•é€²è¡Œä¸‹ä¸€æ­¥</span>}</div>
                        <div className="flex justify-between items-center mt-4 pt-2 border-t border-slate-100"><div className="flex gap-2 w-full justify-end">{activeOridTab !== 'D' ? (<button onClick={() => { const tabs: OridType[] = ['O', 'R', 'I', 'D']; setActiveOridTab(tabs[tabs.indexOf(activeOridTab) + 1]); }} disabled={inputs[activeOridTab].length < MIN_CHAR_COUNT} className="px-4 py-2 text-sm bg-slate-800 text-white rounded-lg hover:bg-slate-900 disabled:opacity-50 disabled:cursor-not-allowed">ä¸‹ä¸€æ­¥</button>) : (<button onClick={callGeminiAPI} disabled={loading || !currentArticleObj || inputs.D.length < MIN_CHAR_COUNT} className="px-6 py-2 bg-indigo-600 text-white rounded-lg flex items-center gap-2 font-medium hover:bg-indigo-700 disabled:bg-slate-300 disabled:cursor-not-allowed">{loading ? <RefreshCw className="animate-spin w-4 h-4"/> : <Sparkles className="w-4 h-4"/>}{loading ? 'åˆ†æä¸­...' : 'æäº¤çµ¦ AI'}</button>)}</div></div>
                      </div>
                    </div>
                    <div className="space-y-4">
                      {error && <div className="p-3 bg-red-50 text-red-600 rounded-lg text-sm flex items-center gap-2"><AlertCircle size={16} /> {error}</div>}
                      {!currentFeedback && !loading && <div className="h-full min-h-[300px] bg-slate-100 rounded-2xl border border-dashed border-slate-300 flex flex-col items-center justify-center text-slate-400 p-8"><Send className="w-8 h-8 mb-2 opacity-50" /><p className="text-sm">å®Œæˆæ‰€æœ‰æ¬„ä½å¾Œæäº¤ï¼ŒAI å°‡åœ¨æ­¤é¡¯ç¤ºå›é¥‹</p></div>}
                      {loading && <div className="h-full min-h-[300px] bg-white rounded-2xl border border-slate-200 flex flex-col items-center justify-center p-8"><div className="w-10 h-10 border-4 border-indigo-200 border-t-indigo-600 rounded-full animate-spin mb-4"></div><p className="text-slate-500 text-sm animate-pulse">AI æ­£åœ¨æ‰¹æ”¹æ‚¨çš„æ–‡ç« ...</p></div>}
                      {currentFeedback && <div className="animate-in slide-in-from-bottom-4 duration-500 pb-10"><div className="bg-gradient-to-r from-indigo-600 to-purple-600 p-5 rounded-xl text-white shadow-lg mb-4"><h3 className="font-bold mb-2 flex items-center gap-2"><Sparkles className="w-4 h-4 text-yellow-300" /> ç¸½è©•</h3><p className="text-sm opacity-95 leading-relaxed">{currentFeedback.overall}</p></div>{(['O', 'R', 'I', 'D'] as OridType[]).map((type) => (<FeedbackCard key={type} data={currentFeedback[type]} type={type} />))}</div>}
                    </div>
                  </div>
                </>
              )}
            </div>
          </div>
        )}
      </main>
    </div>
  );
}
