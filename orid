import React, { useState, useEffect, useMemo, useRef } from 'react';
import { 
  BookOpen, Brain, Lightbulb, Heart, Footprints, Send, 
  CheckCircle2, AlertCircle, Settings, ChevronRight, 
  RefreshCw, Sparkles, User, History, LogOut, 
  Plus, Trash2, Eye, LayoutDashboard, FileText,
  Filter, Download, X, FileSpreadsheet, Image as ImageIcon, ArrowLeft, MousePointerClick,
  Pencil, AlertTriangle, ArrowRight, Home
} from 'lucide-react';

// Firebase Imports
import { initializeApp } from 'firebase/app';
import { 
  getAuth, 
  signInAnonymously, 
  onAuthStateChanged,
  signInWithCustomToken
} from 'firebase/auth';
import { 
  getFirestore, 
  collection, 
  addDoc, 
  onSnapshot, 
  doc,
  deleteDoc,
  updateDoc,
  query,
  orderBy,
  serverTimestamp
} from 'firebase/firestore';

// --- Types ---

type OridType = 'O' | 'R' | 'I' | 'D';
// Added 'landing' to ViewMode
type ViewMode = 'landing' | 'login' | 'student' | 'teacher';
type StudentTab = 'write' | 'history';
type TeacherTab = 'submissions' | 'articles';

interface FeedbackItem {
  score: number;
  comment: string;
  suggestion: string;
}

interface FeedbackData {
  O: FeedbackItem;
  R: FeedbackItem;
  I: FeedbackItem;
  D: FeedbackItem;
  overall: string;
}

interface Article {
  id: string;
  title: string;
  content: string;
  createdAt: any;
}

interface Submission {
  id: string;
  studentName: string;
  articleId: string;
  articleTitle: string;
  inputs: Record<OridType, string>;
  feedback: FeedbackData;
  createdAt: any; // Firestore Timestamp
}

// --- Default Data & Constants ---

const TEACHER_PASSWORD = "t-huang"; 
const MIN_CHAR_COUNT = 50; 

// --- Firebase Initialization Pattern ---

const firebaseConfig = JSON.parse(__firebase_config);
const app = initializeApp(firebaseConfig);
const auth = getAuth(app);
const db = getFirestore(app);
const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';

// --- Main Component ---

export default function App() {
  // Auth & User State
  const [user, setUser] = useState<any>(null);
  // Default to landing page
  const [viewMode, setViewMode] = useState<ViewMode>('landing');
  const [role, setRole] = useState<'student' | 'teacher' | null>(null);
  const [currentName, setCurrentName] = useState('');
  
  // Data State
  const [articles, setArticles] = useState<Article[]>([]);
  const [submissions, setSubmissions] = useState<Submission[]>([]);
  
  // UI State
  const [studentTab, setStudentTab] = useState<StudentTab>('write');
  const [teacherTab, setTeacherTab] = useState<TeacherTab>('submissions');
  const [apiKey, setApiKey] = useState('AIzaSyDBKH_4zy-ih8gfCYOqoUmBM7qhaW91LWA');
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState<string | null>(null);
  const [showSettings, setShowSettings] = useState(false);
  const [isHtml2CanvasLoaded, setIsHtml2CanvasLoaded] = useState(false);

  // Form State (Student Writing)
  const [selectedArticleId, setSelectedArticleId] = useState<string>('');
  const [inputs, setInputs] = useState<Record<OridType, string>>({ O: '', R: '', I: '', D: '' });
  const [currentFeedback, setCurrentFeedback] = useState<FeedbackData | null>(null);
  const [activeOridTab, setActiveOridTab] = useState<OridType>('O');

  // Student/Teacher Viewing Logic
  const [viewingSubmissionId, setViewingSubmissionId] = useState<string | null>(null);

  // Teacher Filter State
  const [filterStudent, setFilterStudent] = useState('');
  const [filterArticle, setFilterArticle] = useState('');
  
  // Teacher Article Management
  const [newArticleTitle, setNewArticleTitle] = useState('');
  const [newArticleContent, setNewArticleContent] = useState('');
  const [isAddingArticle, setIsAddingArticle] = useState(false);
  const [editingArticleId, setEditingArticleId] = useState<string | null>(null);

  // Custom Modal State
  const [modalConfig, setModalConfig] = useState<{
    isOpen: boolean;
    title: string;
    message: string;
    onConfirm: () => void;
    type: 'danger' | 'info';
  }>({
    isOpen: false,
    title: '',
    message: '',
    onConfirm: () => {},
    type: 'info'
  });

  // Focus Descriptions
  const oridGuides = {
    O: { title: 'Objective å®¢è§€äº‹å¯¦', icon: <BookOpen className="w-5 h-5" />, color: 'bg-blue-100 text-blue-700', question: 'ä½ çœ‹åˆ°äº†ä»€éº¼ï¼Ÿè®€åˆ°äº†å“ªäº›å…·é«”çš„äº‹å¯¦ã€æ•¸æ“šæˆ–è§€é»ï¼Ÿ' },
    R: { title: 'Reflective æ„Ÿå—åæ‡‰', icon: <Heart className="w-5 h-5" />, color: 'bg-red-100 text-red-700', question: 'é–±è®€éç¨‹ä¸­æœ‰ä»€éº¼æƒ…ç·’ï¼Ÿä»€éº¼åœ°æ–¹è®“ä½ é©šè¨ã€æ„Ÿå‹•æˆ–å›°æƒ‘ï¼Ÿ' },
    I: { title: 'Interpretive æ„ç¾©è©®é‡‹', icon: <Lightbulb className="w-5 h-5" />, color: 'bg-yellow-100 text-yellow-700', question: 'é€™ç¯‡æ–‡ç« çš„æ ¸å¿ƒæ„ç¾©æ˜¯ä»€éº¼ï¼Ÿä½ å­¸åˆ°äº†ä»€éº¼é‡è¦è§€å¿µï¼Ÿ' },
    D: { title: 'Decisional æ±ºå®šè¡Œå‹•', icon: <Footprints className="w-5 h-5" />, color: 'bg-green-100 text-green-700', question: 'æ¥ä¸‹ä¾†ä½ æœƒæ€éº¼åšï¼Ÿæœ‰ä»€éº¼å…·é«”çš„æ‡‰ç”¨è¨ˆç•«æˆ–æ”¹è®Šï¼Ÿ' }
  };

  // --- Effects ---

  // 1. Initialize Auth & Load Scripts
  useEffect(() => {
    const initAuth = async () => {
      if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
        await signInWithCustomToken(auth, __initial_auth_token);
      } else {
        await signInAnonymously(auth);
      }
    };
    initAuth();
    const unsubscribe = onAuthStateChanged(auth, setUser);

    // Load html2canvas for image generation
    const script = document.createElement('script');
    script.src = 'https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js';
    script.async = true;
    script.onload = () => setIsHtml2CanvasLoaded(true);
    document.body.appendChild(script);

    return () => {
      unsubscribe();
      if (document.body.contains(script)) {
        document.body.removeChild(script);
      }
    };
  }, []);

  // 2. Fetch Data (Articles & Submissions)
  useEffect(() => {
    if (!user) return;

    // Fetch Articles
    const articlesRef = collection(db, 'artifacts', appId, 'public', 'data', 'articles');
    const unsubArticles = onSnapshot(articlesRef, (snapshot) => {
      const data = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() } as Article));
      data.sort((a, b) => (b.createdAt?.seconds || 0) - (a.createdAt?.seconds || 0));
      setArticles(data);
      if (data.length > 0 && !selectedArticleId) {
        setSelectedArticleId(data[0].id);
      }
    }, (err) => console.error("Error fetching articles:", err));

    // Fetch Submissions
    const submissionsRef = collection(db, 'artifacts', appId, 'public', 'data', 'submissions');
    const unsubSubmissions = onSnapshot(submissionsRef, (snapshot) => {
      const data = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() } as Submission));
      data.sort((a, b) => (b.createdAt?.seconds || 0) - (a.createdAt?.seconds || 0));
      setSubmissions(data);
    }, (err) => console.error("Error fetching submissions:", err));

    return () => {
      unsubArticles();
      unsubSubmissions();
    };
  }, [user]);

  // --- Logic Functions ---

  const showModal = (title: string, message: string, onConfirm: () => void, type: 'danger' | 'info' = 'info') => {
    setModalConfig({ isOpen: true, title, message, onConfirm, type });
  };

  const closeModal = () => {
    setModalConfig(prev => ({ ...prev, isOpen: false }));
  };

  const handleLogin = (selectedRole: 'student' | 'teacher', nameOrPass: string) => {
    if (selectedRole === 'teacher') {
      if (nameOrPass === TEACHER_PASSWORD) {
        setRole('teacher');
        setCurrentName('æ•™å¸«');
        setViewMode('teacher');
      } else {
        setError('å¯†ç¢¼éŒ¯èª¤');
        setTimeout(() => setError(null), 2000);
      }
    } else {
      if (nameOrPass.trim()) {
        setRole('student');
        setCurrentName(nameOrPass.trim());
        setViewMode('student');
      } else {
        setError('è«‹è¼¸å…¥å§“å');
        setTimeout(() => setError(null), 2000);
      }
    }
  };

  const handleLogout = () => {
    setRole(null);
    setCurrentName('');
    setViewMode('landing'); // Return to Landing Page on logout
    setInputs({ O: '', R: '', I: '', D: '' });
    setCurrentFeedback(null);
    setStudentTab('write');
    setViewingSubmissionId(null);
    setIsAddingArticle(false);
    setEditingArticleId(null);
    setNewArticleTitle('');
    setNewArticleContent('');
  };

  const handleSaveArticle = async () => {
    if (!newArticleTitle.trim() || !newArticleContent.trim()) return;
    try {
      if (editingArticleId) {
        // Update existing article
        await updateDoc(doc(db, 'artifacts', appId, 'public', 'data', 'articles', editingArticleId), {
          title: newArticleTitle,
          content: newArticleContent
        });
      } else {
        // Create new article
        await addDoc(collection(db, 'artifacts', appId, 'public', 'data', 'articles'), {
          title: newArticleTitle,
          content: newArticleContent,
          createdAt: serverTimestamp()
        });
      }
      setNewArticleTitle('');
      setNewArticleContent('');
      setIsAddingArticle(false);
      setEditingArticleId(null);
    } catch (e) {
      console.error("Error saving article: ", e);
      setError("æ“ä½œå¤±æ•—ï¼Œè«‹æª¢æŸ¥ç¶²è·¯é€£ç·š");
    }
  };

  const handleEditArticleClick = (article: Article) => {
    setNewArticleTitle(article.title);
    setNewArticleContent(article.content);
    setEditingArticleId(article.id);
    setIsAddingArticle(true);
  };

  const handleCancelEditArticle = () => {
    setIsAddingArticle(false);
    setNewArticleTitle('');
    setNewArticleContent('');
    setEditingArticleId(null);
  };

  const handleDeleteArticle = (id: string) => {
    showModal(
      'åˆªé™¤æ–‡ç« ç¢ºèª',
      'ç¢ºå®šè¦åˆªé™¤é€™ç¯‡æ–‡ç« å—ï¼Ÿåˆªé™¤å¾Œç„¡æ³•å¾©åŸã€‚',
      async () => {
        try {
          await deleteDoc(doc(db, 'artifacts', appId, 'public', 'data', 'articles', id));
          if (editingArticleId === id) {
            handleCancelEditArticle();
          }
          closeModal();
        } catch (e) {
          console.error("Error deleting article:", e);
          setError("åˆªé™¤å¤±æ•—");
        }
      },
      'danger'
    );
  };

  const handleDeleteSubmission = (id: string) => {
    showModal(
      'åˆªé™¤ä½œæ¥­ç¢ºèª',
      'ç¢ºå®šè¦åˆªé™¤é€™ä»½å­¸ç”Ÿæäº¤çš„ä½œæ¥­å—ï¼Ÿæ­¤å‹•ä½œç„¡æ³•å¾©åŸã€‚',
      async () => {
        try {
          await deleteDoc(doc(db, 'artifacts', appId, 'public', 'data', 'submissions', id));
          if (viewingSubmissionId === id) setViewingSubmissionId(null);
          closeModal();
        } catch (e) {
          console.error("Error deleting submission:", e);
          setError("åˆªé™¤å¤±æ•—");
        }
      },
      'danger'
    );
  };

  // --- Export Functions ---

  const handleDownloadImage = async (elementId: string, fileName: string) => {
    if (!isHtml2CanvasLoaded || !(window as any).html2canvas) {
      setError("åœ–ç‰‡ç”ŸæˆåŠŸèƒ½è¼‰å…¥ä¸­ï¼Œè«‹ç¨å€™å†è©¦...");
      return;
    }
    const element = document.getElementById(elementId);
    if (!element) return;
    try {
      const canvas = await (window as any).html2canvas(element, {
        scale: 2, useCORS: true, backgroundColor: '#f8fafc', logging: false
      });
      const link = document.createElement('a');
      link.download = `${fileName}.png`;
      link.href = canvas.toDataURL('image/png');
      link.click();
    } catch (e) {
      console.error('Snapshot failed', e);
      setError('åœ–ç‰‡ç”Ÿæˆå¤±æ•—ï¼Œè«‹é‡è©¦');
    }
  };

  const handleExportExcel = (data: Submission[], fileName: string) => {
    let csvContent = "\uFEFF"; 
    csvContent += "å­¸ç”Ÿå§“å,æ–‡ç« æ¨™é¡Œ,æäº¤æ—¥æœŸ,O-è§€å¯Ÿäº‹å¯¦,O-è©•åˆ†,O-è©•èª,R-æ„Ÿå—åæ‡‰,R-è©•åˆ†,R-è©•èª,I-æ„ç¾©è©®é‡‹,I-è©•åˆ†,I-è©•èª,D-æ±ºå®šè¡Œå‹•,D-è©•åˆ†,D-è©•èª,ç¸½é«”å›é¥‹\n";

    data.forEach(sub => {
      const dateStr = sub.createdAt?.toDate ? sub.createdAt.toDate().toLocaleDateString() : '';
      const row = [
        sub.studentName,
        sub.articleTitle,
        dateStr,
        `"${sub.inputs.O.replace(/"/g, '""')}"`,
        sub.feedback.O.score,
        `"${sub.feedback.O.comment.replace(/"/g, '""')}"`,
        `"${sub.inputs.R.replace(/"/g, '""')}"`,
        sub.feedback.R.score,
        `"${sub.feedback.R.comment.replace(/"/g, '""')}"`,
        `"${sub.inputs.I.replace(/"/g, '""')}"`,
        sub.feedback.I.score,
        `"${sub.feedback.I.comment.replace(/"/g, '""')}"`,
        `"${sub.inputs.D.replace(/"/g, '""')}"`,
        sub.feedback.D.score,
        `"${sub.feedback.D.comment.replace(/"/g, '""')}"`,
        `"${sub.feedback.overall.replace(/"/g, '""')}"`
      ].join(",");
      csvContent += row + "\n";
    });

    const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
    const link = document.createElement("a");
    const url = URL.createObjectURL(blob);
    link.setAttribute("href", url);
    link.setAttribute("download", `${fileName}.csv`);
    link.style.visibility = 'hidden';
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  };

  const handleExportWord = (data: Submission[], fileName: string) => {
    let htmlContent = `
      <html xmlns:o='urn:schemas-microsoft-com:office:office' xmlns:w='urn:schemas-microsoft-com:office:word' xmlns='http://www.w3.org/TR/REC-html40'>
      <head><meta charset='utf-8'><title>ORID Export</title>
      <style>
        body { font-family: 'Microsoft JhengHei', sans-serif; }
        .submission { margin-bottom: 40px; border-bottom: 2px solid #ccc; padding-bottom: 20px; }
        h1 { color: #2E3A59; }
        h2 { color: #4F46E5; }
        .section { margin: 15px 0; }
        .label { font-weight: bold; color: #555; }
        .content { margin-top: 5px; }
        .feedback { background-color: #F3F4F6; padding: 10px; margin-top: 5px; border-left: 4px solid #4F46E5; }
        .score { font-weight: bold; color: #DC2626; }
      </style>
      </head><body>
    `;

    data.forEach(sub => {
      const dateStr = sub.createdAt?.toDate ? sub.createdAt.toDate().toLocaleDateString() : '';
      htmlContent += `
        <div class="submission">
          <h1>ORID åæ€å­¸ç¿’å–®</h1>
          <p><strong>å­¸ç”Ÿå§“åï¼š</strong>${sub.studentName} | <strong>æ—¥æœŸï¼š</strong>${dateStr}</p>
          <p><strong>æ–‡ç« æ¨™é¡Œï¼š</strong>${sub.articleTitle}</p>
          <hr/>
      `;

      (['O', 'R', 'I', 'D'] as OridType[]).forEach(type => {
        htmlContent += `
          <div class="section">
            <div class="label">ã€${type}ã€‘${type === 'O' ? 'å®¢è§€äº‹å¯¦' : type === 'R' ? 'æ„Ÿå—åæ‡‰' : type === 'I' ? 'æ„ç¾©è©®é‡‹' : 'æ±ºå®šè¡Œå‹•'}</div>
            <div class="content">${sub.inputs[type].replace(/\n/g, '<br/>')}</div>
            <div class="feedback">
              <div><span class="score">è©•åˆ†ï¼š${sub.feedback[type].score}/10</span></div>
              <div><strong>è©•èªï¼š</strong>${sub.feedback[type].comment}</div>
              <div><strong>å»ºè­°ï¼š</strong>${sub.feedback[type].suggestion}</div>
            </div>
          </div>
        `;
      });

      htmlContent += `
          <div class="section">
            <div class="label">ã€ç¸½é«”å›é¥‹ã€‘</div>
            <div class="feedback">${sub.feedback.overall}</div>
          </div>
        </div>
      `;
    });

    htmlContent += "</body></html>";

    const blob = new Blob([htmlContent], { type: 'application/msword' });
    const link = document.createElement("a");
    link.href = URL.createObjectURL(blob);
    link.download = `${fileName}.doc`;
    link.click();
  };

  const callGeminiAPI = async () => {
    setLoading(true);
    setError(null);
    const currentArticle = articles.find(a => a.id === selectedArticleId);
    if (!currentArticle) {
      setLoading(false);
      setError("è«‹å…ˆé¸æ“‡ä¸€ç¯‡æ–‡ç« ");
      return;
    }

    const systemPrompt = `
      ä½ æ˜¯ä¸€ä½å°ˆæ¥­çš„é–±è®€å¯«ä½œæ•™ç·´ï¼Œå°ˆç²¾æ–¼ ORID (ç„¦é»è¨è«–æ³•)ã€‚
      ä½¿ç”¨è€…å§“åï¼š${currentName}
      æ–‡ç« æ¨™é¡Œï¼š${currentArticle.title}
      æ–‡ç« å…§å®¹ï¼š"""${currentArticle.content}"""
      
      è«‹é‡å°ä½¿ç”¨è€…çš„å›ç­”é€²è¡Œæ‰¹æ”¹ã€‚
      é‡è¦æ‰¹æ”¹åŸå‰‡ï¼š
      1. ã€æª¢æ ¸å…§å®¹é—œè¯æ€§ã€‘ï¼šè«‹åš´æ ¼æª¢æŸ¥å­¸ç”Ÿçš„å›ç­”æ˜¯å¦ç¢ºå¯¦æ ¹æ“šæ–‡ç« å…§å®¹é€²è¡Œåˆ†æã€‚
      2. ã€å…·é«”å»ºè­°ã€‘ï¼šåœ¨ suggestion æ¬„ä½ä¸­ï¼Œè«‹çµ¦äºˆã€Œéå¸¸å…·é«”ã€çš„å»ºè­°ã€‚
      
      **æ ¼å¼è¦æ±‚ (CRITICAL)ï¼š**
      1. è«‹åƒ…å›å‚³ç´” JSON å­—ä¸²ï¼Œä¸è¦åŒ…å« \`\`\`json æˆ–å…¶ä»– markdown æ¨™è¨˜ã€‚
      2. **åš´ç¦**åœ¨ JSON å‰å¾ŒåŠ å…¥ä»»ä½•å•å€™èªæˆ–èªªæ˜æ–‡å­—ã€‚
      
      å›å‚³ JSON æ ¼å¼ï¼š
      {
        "O": { "score": 1-10, "comment": "...", "suggestion": "..." },
        "R": { "score": 1-10, "comment": "...", "suggestion": "..." },
        "I": { "score": 1-10, "comment": "...", "suggestion": "..." },
        "D": { "score": 1-10, "comment": "...", "suggestion": "..." },
        "overall": "ç¸½çµ (è«‹ç”¨ ${currentName} ç¨±å‘¼)"
      }
      
      ä½¿ç”¨è€…å›ç­”ï¼š
      O: ${inputs.O}
      R: ${inputs.R}
      I: ${inputs.I}
      D: ${inputs.D}
    `;

    try {
      const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ contents: [{ parts: [{ text: systemPrompt }] }] })
      });
      const data = await response.json();
      if (data.error) throw new Error(data.error.message);
      
      const textResponse = data.candidates[0].content.parts[0].text;
      
      // Robust Parsing Logic
      let jsonString = textResponse;
      jsonString = jsonString.replace(/```json/g, '').replace(/```/g, '');
      const firstOpenBrace = jsonString.indexOf('{');
      const lastCloseBrace = jsonString.lastIndexOf('}');
      if (firstOpenBrace !== -1 && lastCloseBrace !== -1) {
        jsonString = jsonString.substring(firstOpenBrace, lastCloseBrace + 1);
      }
      
      const parsedFeedback = JSON.parse(jsonString);
      
      setCurrentFeedback(parsedFeedback);
      await addDoc(collection(db, 'artifacts', appId, 'public', 'data', 'submissions'), {
        studentName: currentName,
        articleId: currentArticle.id,
        articleTitle: currentArticle.title,
        inputs: inputs,
        feedback: parsedFeedback,
        createdAt: serverTimestamp()
      });
    } catch (err: any) {
      console.error("Analysis Error:", err);
      if (err instanceof SyntaxError) {
         setError('AI å›å‚³æ ¼å¼ç•°å¸¸ï¼Œè«‹ç¨å¾Œå†è©¦ä¸€æ¬¡ (Parsing Error)');
      } else {
         setError(err.message || 'ç™¼ç”ŸéŒ¯èª¤ï¼Œè«‹ç¨å¾Œå†è©¦');
      }
    } finally {
      setLoading(false);
    }
  };

  // --- Derived State ---
  const mySubmissions = useMemo(() => {
    return submissions.filter(s => s.studentName === currentName);
  }, [submissions, currentName]);

  const currentArticleObj = articles.find(a => a.id === selectedArticleId);

  const filteredSubmissions = useMemo(() => {
    return submissions.filter(sub => {
      const matchesStudent = filterStudent ? sub.studentName === filterStudent : true;
      const matchesArticle = filterArticle ? sub.articleTitle === filterArticle : true;
      return matchesStudent && matchesArticle;
    });
  }, [submissions, filterStudent, filterArticle]);

  const uniqueStudents = useMemo(() => [...new Set(submissions.map(s => s.studentName))], [submissions]);
  const uniqueTitles = useMemo(() => [...new Set(submissions.map(s => s.articleTitle))], [submissions]);

  const viewingSubmission = useMemo(() => {
    return submissions.find(s => s.id === viewingSubmissionId);
  }, [submissions, viewingSubmissionId]);

  // --- View Components ---

  const Modal = () => {
    if (!modalConfig.isOpen) return null;
    return (
      <div className="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/50 backdrop-blur-sm animate-in fade-in duration-200">
        <div className="bg-white rounded-2xl shadow-xl w-full max-w-sm p-6 transform transition-all scale-100">
          <div className="flex flex-col items-center text-center gap-4">
            <div className={`p-3 rounded-full ${modalConfig.type === 'danger' ? 'bg-red-100 text-red-600' : 'bg-blue-100 text-blue-600'}`}>
              <AlertTriangle size={32} />
            </div>
            <h3 className="text-lg font-bold text-slate-900">{modalConfig.title}</h3>
