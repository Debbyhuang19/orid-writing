            <button onClick={() => setMode('teacher')} className={`flex-1 py-2 text-sm font-medium rounded-md transition-all ${mode === 'teacher' ? 'bg-white shadow text-indigo-600' : 'text-slate-500'}`}>æˆ‘æ˜¯è€å¸«</button>
          </div>
          <div className="space-y-4">
            {mode === 'student' ? (
              <>
                <div><label className="block text-sm font-medium text-slate-700 mb-1">æ‚¨çš„å§“å</label><input type="text" value={tempName} onChange={(e) => setTempName(e.target.value)} onKeyDown={handleKeyDown} placeholder="è«‹è¼¸å…¥å§“åä½œç‚ºå¸³è™Ÿ" className="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500 focus:outline-none"/></div>
                <button onClick={() => handleLogin('student', tempName)} className="w-full py-3 bg-indigo-600 text-white rounded-lg font-bold hover:bg-indigo-700 transition-colors">é–‹å§‹å­¸ç¿’</button>
